<% if logged_in? %>
  <h1>Hi, <%= current_user_name %>.</h1>

  <%= form_tag({controller: 'sessions', action: 'destroy', method: 'post'}) do %>
    <%= button_to("Log out", logout_path, method: :delete) %><br>
  <% end %>

<% else %>
  <h1>Hi! Welcome. </h1>
  <h3>Please log in.</h3>
  <%= button_to("Login", login_path) %>
<% end %>